<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi Kasonde"
            android:layout_marginHorizontal="16dp"
            android:textSize="12pt" />
        <TextView
            android:id="@+id/user_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="You have 2 pending tests this week"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/card_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400"
                        android:textSize="16pt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Points"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take Test"
                        android:layout_gravity="center"
                        android:textSize="4pt"
                        android:padding="4dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/card_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get over 500 points this week to get a free One on One Class" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/pending_tests_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 pending tests"
                android:textStyle="bold"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal">

                <!--  Topic 1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/test_topic_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/topic_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 1"
                            android:lines="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/test_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="Climate Science Fundam..." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--  Topic 2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/test_topic_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/topic_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 2"
                            android:lines="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/test_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="Climate Science Fundam..." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--  Topic 3-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/test_topic_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/topic_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 3"
                            android:lines="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/test_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="Climate Science Fundam..." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--  Topic 4-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/test_topic_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/topic_title_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 4"
                            android:lines="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/test_title_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="Climate Science Fundam..." />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add more CardViews as needed -->
            </GridLayout>
        </LinearLayout>


        <!--        MODULES  -->
        <LinearLayout
            android:id="@+id/modules_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modules"
                android:textStyle="bold"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal">

                <!--  Topic 1-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/module_topic_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/module_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 1"
                            android:lines="1"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--  Topic 2-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/module_topic_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/module_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 2"
                            android:lines="1"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--  Topic 3-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/module_topic_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/module_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 3"
                            android:lines="1"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--  Topic 4-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/module_topic_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/module_title_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 4"
                            android:lines="1"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add more CardViews as needed -->
            </GridLayout>

            <TextView
                android:id="@+id/view_more_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View more"
                android:textColor="@color/teal_700"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="16dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
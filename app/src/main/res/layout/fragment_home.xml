<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="8dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi Kasonde"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/user_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <!-- Points Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/green_100"
            app:cardCornerRadius="12dp"
            app:strokeColor="@color/teal_200"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/card_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                        android:textColor="@color/teal_700"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Points"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/teal_700"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/continue_learning"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue Learning"
                        android:textSize="5pt"
                        app:icon="@drawable/baseline_play_circle_filled_24"
                        app:iconTint="@color/teal_700"
                        app:iconPadding="4dp"
                        app:iconGravity="textStart"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/card_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Get over 500 points this week to get a free One on One Class"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Forum Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/teal_200"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Head to forum and see what other people are talking about."
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurface"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/forums_btn"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:textSize="8pt"
                    android:text="Join the Conversation"
                    android:textColor="@color/white"
                    app:icon="@drawable/baseline_post_add_24"
                    app:iconTint="@color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pending Tests Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="4 pending tests"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/teal_700"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:orientation="horizontal">

                <!-- Topic 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/test_topic_1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:layout_gravity="fill"
                    app:cardBackgroundColor="@color/green_100"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@color/green_500"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/topic_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 1"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/teal_700"/>

                        <TextView
                            android:id="@+id/test_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Climate Science Fundam..."
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/teal_700"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Topic 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/test_topic_2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:layout_gravity="fill"
                    app:cardBackgroundColor="@color/green_100"
                    app:strokeColor="@color/green_500"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/topic_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 2"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/teal_700"/>

                        <TextView
                            android:id="@+id/test_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Climate Science Fundam..."
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/teal_700"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Topic 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/test_topic_3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:layout_gravity="fill"
                    app:cardBackgroundColor="@color/green_100"
                    app:strokeColor="@color/green_500"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/topic_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 3"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/teal_700"/>

                        <TextView
                            android:id="@+id/test_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Climate Science Fundam..."
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/teal_700"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Topic 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/test_topic_4"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:layout_gravity="fill"
                    app:cardBackgroundColor="@color/green_100"
                    app:strokeColor="@color/green_500"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/topic_title_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Topic 4"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/teal_700"/>

                        <TextView
                            android:id="@+id/test_title_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Climate Science Fundam..."
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/teal_700"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
        </LinearLayout>

        <!-- Modules Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modules"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@color/teal_700"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_more_courses"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="5pt"
                    android:textColor="?attr/colorPrimary"
                    app:icon="@drawable/outline_arrow_right_alt_24"
                    app:iconTint="?attr/colorPrimary"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/module_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>